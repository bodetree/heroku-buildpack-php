#!/bin/bash
# Build Path: /app/.heroku/php/

OUT_PREFIX=$1

# fail hard
set -o pipefail
# fail harder
set -eux

DEFAULT_VERSION="6.1.0"
dep_version=${VERSION:-$DEFAULT_VERSION}
dep_dirname=gmp-${dep_version}
dep_archive_name=gmp-${dep_version}.tar.bz2
dep_url=https://gmplib.org/download/gmp/${dep_archive_name}

echo "-----> Building libgmp ${dep_version}..."

curl -L ${dep_url} | tar -xj

pushd ${dep_dirname}
./configure --prefix=${OUT_PREFIX}
make -s -j 9
make install -s
popd

echo "-----> Done."
